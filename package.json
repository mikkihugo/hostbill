{
  "name": "@hostbill/cloud-iq",
  "version": "1.0.0",
  "description": "Production-ready Cloud-IQ HostBill Integration with Microsoft GenAI",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "start": "remix-serve ./build/index.js",
    "preview": "remix vite:preview",
    "test": "node --test test/*.test.js",
    "test:watch": "node --test --watch test/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage test/*.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check && npm run test",
    "docker:build": "docker build -t cloud-iq-hostbill .",
    "docker:run": "docker run -p 8000:8000 --env-file .env cloud-iq-hostbill",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "health-check": "curl -f http://localhost:8000/health || exit 1"
  },
  "keywords": [
    "hostbill",
    "crayon",
    "cloud-iq",
    "genai",
    "microsoft",
    "billing",
    "csp",
    "office365",
    "production-ready"
  ],
  "author": "Cloud-IQ Team",
  "license": "MIT",
  "dependencies": {
    "@genaiscript/api": "^2.0.4",
    "@genaiscript/core": "^2.0.4",
    "@remix-run/node": "^2.12.0",
    "@remix-run/react": "^2.12.0",
    "genaiscript": "^2.0.4",
    "isbot": "^4",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "remix": "^2.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@remix-run/dev": "^2.17.2",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.0",
    "vite": "^6.4.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikkihugo/hostbill.git"
  },
  "bugs": {
    "url": "https://github.com/mikkihugo/hostbill/issues"
  },
  "homepage": "https://github.com/mikkihugo/hostbill#readme",
  "files": ["src/", "config/", "README.md", "LICENSE"],
  "config": {
    "unsafe-perm": true
  }
}
